create schema landing;
create schema audit;

create or replace TABLE DBT_DEMO.LANDING.CUSTOMERS (
	CUSTOMER_ID NUMBER(38,0),
	NAME VARCHAR(255),
	COUNTRY VARCHAR(100),
	REGION_ID VARCHAR(50),
	CREATED_DATE TIMESTAMP_NTZ(9),
	LASTMODIFIED_DATE TIMESTAMP_NTZ(9)
);

create or replace TABLE DBT_DEMO.LANDING.PRODUCTS (
	PRODUCT_ID NUMBER(38,0) NOT NULL,
	PRODUCT_NAME VARCHAR(255),
	UNITPRICE NUMBER(38,0),
	CREATED_DATE TIMESTAMP_NTZ(9),
	LASTMODIFIED_DATE TIMESTAMP_NTZ(9),
	primary key (PRODUCT_ID)
);

create or replace TABLE DBT_DEMO.LANDING.SALES (
	ORDER_ID NUMBER(38,0),
	PRODUCT_ID NUMBER(38,0),
	CUSTOMER_ID NUMBER(38,0),
	ORDER_DATE DATE,
	ORDER_AMOUNT NUMBER(10,2),
	CREATED_DATE TIMESTAMP_NTZ(9),
	QUANTITY NUMBER(38,0),
	LASTMODIFIED_DATE DATE
);

create or replace TABLE DBT_DEMO.AUDIT.AUDIT_LOG (
	INVOCATION_ID VARCHAR(255),
	MODEL_NAME VARCHAR(255),
	STATUS VARCHAR(255),
	START_TIME TIMESTAMP_NTZ(9),
	END_TIME TIMESTAMP_NTZ(9),
	USER VARCHAR(255)
);
